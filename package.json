{
  "name": "with-tailwind",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "build:docs": "cd apps/docs && npm run build",
    "build:storybook": "cd packages/frontend && npm run build:storybook",
    "dev": "npm run db:up && turbo run dev",
    "dev:e2e": "turbo run dev dev:e2e",
    "dev:test": "turbo run dev:test",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "check-types": "turbo run check-types",
    "typecheck": "turbo run typecheck",
    "test": "turbo run test",
    "format-and-lint": "biome check .",
    "format-and-lint:fix": "biome check . --write",
    "build:core": "cd packages/core && npm run build",
    "build:frontend": "cd packages/frontend && npm run build",
    "build:backend": "cd packages/backend && npm run build",
    "build:example-backend": "cd apps/nubase/backend && npm run build",
    "build:example-frontend": "cd apps/nubase/frontend && npm run build",
    "build:frontend:storybook": "cd packages/frontend && npm run build:storybook",
    "db:up": "cd apps/nubase/backend && npm run db:dev:up && npm run db:test:up",
    "db:down": "cd apps/nubase/backend && npm run db:dev:down && npm run db:test:down",
    "db:kill": "cd apps/nubase/backend && npm run db:dev:kill && npm run db:test:kill",
    "db:seed": "cd apps/nubase/backend && npm run db:dev:seed",
    "db:reset": "cd apps/nubase/backend && npm run db:dev:reset && npm run db:test:reset",
    "e2e": "turbo run e2e",
    "e2e:ui": "cd apps/nubase/frontend && npm run e2e:ui",
    "e2e:headed": "cd apps/nubase/frontend && npm run e2e:headed",
    "e2e:debug": "cd apps/nubase/frontend && npm run e2e:debug",
    "e2e:report": "cd apps/nubase/frontend && npm run e2e:report",
    "e2e:install": "cd apps/nubase/frontend && npm run e2e:install",
    "bump": "./scripts/bump-versions.sh",
    "publish": "turbo run publish:latest --filter=\"@nubase/*\"",
    "publish:dev": "turbo run publish:dev --filter=\"@nubase/*\"",
    "cli": "npm run -w @nubase/cli build && cd apps/nubase && node ../../packages/cli/dist/cli.js",
    "cli:envs": "npm run cli -- envs",
    "cli:db:diff": "npm run cli -- db diff",
    "cli:db:pull": "npm run cli -- db pull",
    "cli:db:push": "npm run cli -- db push",
    "cli:db:reset": "npm run cli -- db reset",
    "cli:init": "npm run cli -- init"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.4.4",
    "turbo": "^2.8.10",
    "vitest": "^4.0.18"
  },
  "engines": {
    "node": ">=18",
    "npm": ">=10.9.2"
  },
  "packageManager": "npm@11.10.1",
  "workspaces": [
    "apps/docs",
    "apps/nubase/*",
    "packages/*"
  ]
}
