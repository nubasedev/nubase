{
  "name": "with-tailwind",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "build:docs": "cd apps/docs && npm run build",
    "build:storybook": "cd packages/frontend && npm run build:storybook",
    "dev": "turbo run dev",
    "dev:e2e": "turbo run dev dev:e2e",
    "dev:test": "turbo run dev:test",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "check-types": "turbo run check-types",
    "typecheck": "turbo run typecheck",
    "test": "turbo run test",
    "format-and-lint": "biome check .",
    "format-and-lint:fix": "biome check . --write",
    "build:core": "cd packages/core && npm run build",
    "build:frontend": "cd packages/frontend && npm run build",
    "build:backend": "cd packages/backend && npm run build",
    "build:example-backend": "cd questlog-example-app/backend && npm run build",
    "build:example-frontend": "cd questlog-example-app/frontend && npm run build",
    "build:frontend:storybook": "cd packages/frontend && npm run build:storybook",
    "db:up": "cd questlog-example-app/backend && npm run db:dev:up && npm run db:test:up",
    "db:down": "cd questlog-example-app/backend && npm run db:dev:down && npm run db:test:down",
    "db:seed": "cd questlog-example-app/backend && npm run db:dev:seed",
    "db:reset": "cd questlog-example-app/backend && npm run db:dev:reset",
    "e2e": "turbo run e2e",
    "e2e:ui": "cd questlog-example-app/frontend && npm run e2e:ui",
    "e2e:headed": "cd questlog-example-app/frontend && npm run e2e:headed",
    "e2e:debug": "cd questlog-example-app/frontend && npm run e2e:debug",
    "e2e:report": "cd questlog-example-app/frontend && npm run e2e:report",
    "e2e:install": "cd questlog-example-app/frontend && npm run e2e:install",
    "publish:core": "turbo run publish --filter=@nubase/core",
    "publish:frontend": "turbo run publish --filter=@nubase/frontend",
    "publish:backend": "turbo run publish --filter=@nubase/backend",
    "publish:all": "turbo run publish --filter=\"@nubase/*\"",
    "test:create": "cd packages/create && npm run build && cd ../.. && rm -rf test-nubase-app && node packages/create/dist/index.js test-nubase-app --skip-install",
    "test:create:full": "cd packages/create && npm run build && cd ../.. && rm -rf test-nubase-app && node packages/create/dist/index.js test-nubase-app",
    "test:create:clean": "rm -rf test-nubase-app"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.10",
    "turbo": "^2.7.2",
    "vitest": "^4.0.16"
  },
  "engines": {
    "node": ">=18",
    "npm": ">=10.9.2"
  },
  "packageManager": "npm@10.9.2",
  "workspaces": [
    "apps/*",
    "packages/*",
    "questlog-example-app/*"
  ]
}
