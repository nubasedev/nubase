{
  "name": "@nubase/create",
  "version": "0.1.17",
  "description": "Create a new Nubase application",
  "type": "module",
  "bin": {
    "nubase-create": "./dist/index.js"
  },
  "files": [
    "dist",
    "templates"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format esm --dts --clean",
    "dev": "tsup src/index.ts --format esm --watch",
    "typecheck": "tsc --noEmit",
    "lint": "biome lint .",
    "lint:fix": "biome lint --write .",
    "prepublishOnly": "npm run build",
    "publish:latest": "npm publish --access public",
    "publish:dev": "npm publish --access public --tag dev"
  },
  "dependencies": {
    "chalk": "^5.3.0",
    "commander": "^12.1.0",
    "fs-extra": "^11.3.3",
    "prompts": "^2.4.2"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^22.19.7",
    "@types/prompts": "^2.4.9",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=18"
  },
  "keywords": [
    "nubase",
    "create",
    "scaffold",
    "fullstack",
    "react",
    "typescript"
  ],
  "author": "",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/nubase/nubase.git",
    "directory": "packages/create"
  }
}
