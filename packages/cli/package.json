{
  "name": "@nubase/cli",
  "version": "0.1.29",
  "description": "CLI tool for Nubase database schema management",
  "type": "module",
  "bin": {
    "nubase": "./dist/cli.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup src/index.ts src/cli.ts --format esm --dts --clean",
    "dev": "tsup src/index.ts src/cli.ts --format esm --watch",
    "typecheck": "tsc --noEmit",
    "lint": "biome lint .",
    "lint:fix": "biome lint --write .",
    "prepublishOnly": "npm run build",
    "publish:latest": "npm publish --access public",
    "publish:dev": "npm publish --access public --tag dev"
  },
  "dependencies": {
    "@nubase/pg": "*",
    "chalk": "^5.3.0",
    "commander": "^12.1.0",
    "dotenv": "^16.4.7",
    "jiti": "^2.4.2",
    "pg": "^8.17.1",
    "prompts": "^2.4.2"
  },
  "devDependencies": {
    "@types/node": "^22.19.7",
    "@types/pg": "^8.16.0",
    "@types/prompts": "^2.4.9",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=18"
  },
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  }
}
