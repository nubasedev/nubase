{
  "name": "nubase-frontend",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:e2e": "playwright test --ui",
    "dev:test": "vite --mode test --port 4002",
    "build": "tsc -b && vite build",
    "preview": "vite preview",
    "test": "vitest run",
    "test:watch": "vitest",
    "e2e": "playwright test",
    "e2e:ui": "playwright test --ui",
    "e2e:debug": "playwright test --debug",
    "e2e:headed": "playwright test --headed",
    "e2e:install": "playwright install",
    "e2e:report": "playwright show-report",
    "db:test:up": "cd ../backend && docker-compose -f docker/test/docker-compose.yml up -d",
    "db:test:down": "cd ../backend && docker-compose -f docker/test/docker-compose.yml down",
    "typecheck": "tsc --noEmit",
    "lint": "biome check .",
    "lint:fix": "biome check . --write --unsafe"
  },
  "dependencies": {
    "@nubase/frontend": "*",
    "@tailwindcss/vite": "^4.2.0",
    "@tanstack/react-router": "^1.162.1",
    "@tanstack/react-router-devtools": "^1.162.1",
    "nubase-schema": "*",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "tailwindcss": "^4.2.0",
    "vitest": "^4.0.18"
  },
  "devDependencies": {
    "@playwright/test": "^1.58.2",
    "@tailwindcss/postcss": "^4.2.0",
    "@types/node": "^25.3.0",
    "@types/react": "^19.2.14",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.4",
    "concurrently": "^9.2.1",
    "globals": "^17.3.0",
    "jsdom": "^28.1.0",
    "node-fetch": "^3.3.2",
    "postcss": "8.5.6",
    "tailwindcss": "^4.2.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.56.0",
    "vite": "^7.3.1"
  }
}
