# System database connection (restricted user, subject to RLS)
DATABASE_URL="postgres://nubase_db:nubase_db@localhost:5434/nubase_db"

# System database admin connection (superuser, for migrations and seeding)
DATABASE_URL_ADMIN="postgres://nubase:nubase@localhost:5434/nubase_db"

# Data database connection (application data, no RLS)
DATA_DATABASE_URL="postgres://data_db:data_db@localhost:5434/data_db"

# Data database admin connection (superuser, for seeding and truncation)
DATA_DATABASE_URL_ADMIN="postgres://nubase:nubase@localhost:5434/data_db"

